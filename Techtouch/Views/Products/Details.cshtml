@model Techtouch.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="panel panel-primary col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel-heading">
                <span class="panel-title">@Html.DisplayFor(model => model.product_name)</span>
            </div>
            <div class="panel-body">
                <div class="col-sm-1 col-md-1 col-lg-1"></div>
                <div class="pull-left col-xs-12 col-sm-4 col-md-3 col-lg-3">
                    <img src='@Html.DisplayFor(model => model.product_image)' />
                </div>
                <div class=" col-xs-12 col-sm-6 col-md-7 col-lg-7 pull-right">
                    <span> @Html.DisplayFor(model => model.product_description) </span><br /><br />
                    <span>Cost: </span> $@Html.DisplayFor(model => model.product_price) <br />
                    <span>Product Type: @Html.DisplayFor(model => model.ProductType.product_type)</span>
                </div>
                <div class="col-sm-1 col-md-1 col-lg-1"></div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
