@model IEnumerable<Techtouch.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-headings">Products.</h2>

    
<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm())
    {
    <p>
        Product: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
    }
    

<div class="row">
    @foreach (var item in Model)
    {
        <div class="panel panel-primary col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel-heading">
                <span class="panel-title">@Html.DisplayFor(modelItem => item.product_name)</span>
                <span class="pull-right">@Html.ActionLink("Details", "Details", new { id = item.product_id })</span>
            </div>
            <div class="panel-body">
                <span>Product Description: </span> @Html.DisplayFor(modelItem => item.product_description) <br />
                <span>Cost: </span> $@Html.DisplayFor(modelItem => item.product_price) <br />
                <span>Type: </span> @Html.DisplayFor(modelItem => item.ProductType.product_type)
            </div>
        </div>
    }
</div>

