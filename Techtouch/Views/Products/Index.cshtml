<div class="row">
    @foreach (var item in Model)
    {

        <div class="panel panel-default col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel-heading">
                <span class="panel-title">@Html.DisplayFor(modelItem => item.product_name)</span>
            </div>
            <div class="panel-body">
                <span>Product Description: </span> @Html.DisplayFor(modelItem => item.product_description) <br />
                <span>Cost: </span> $@Html.DisplayFor(modelItem => item.product_price) <br />
                <span>Type: </span> @Html.DisplayFor(modelItem => item.ProductType.product_type)
            </div>
        </div>
    }
</div>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductType.product_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_description)
        </td>        
        <td>
            $@Html.DisplayFor(modelItem => item.product_price)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.product_id }) |
            @Html.ActionLink("Details", "Details", new { id = item.product_id })|
          <!--  @Html.ActionLink("Delete", "Delete", new { id=item.product_id }) -->
        </td>
    </tr>
}
